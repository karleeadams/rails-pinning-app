<h1>Login</h1>
<div class="row">
	<% if @error %>
		<h2 class="text-danger col-sm-7 col-sm-offset-3"><%= "#{@error}" %></h2>
	<% end %>
</div>
<div class="row">
<%= form_tag("/login", class: "col-sm-6 col-sm-offset-3") do %>
	<div class="form-group">
		<label for="email">User Name:</label>
			<%= text_field_tag("email", value = nil) %>
	</div>
	<div class="form-group">
		<label for="password">Password:</label>
			<%= password_field_tag(name = "password", value = nil) %>
	</div>
	<%= submit_tag(value = "Login", class: "btn btn-default") %> 
<% end %>
</div>
