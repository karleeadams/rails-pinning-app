<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <div class="photo">
    <img src="<%= @pin.image.url(:medium) %>">
  </div>
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <a><%= link_to "#{@pin.url}", @pin.url, html_options = {target: "_blank", class: "url"} %></a>
  </p>
</div>



<br/>
<a href="/">
  <i class="fa fa-chevron-left"></i>
  Back to Home
</a>
