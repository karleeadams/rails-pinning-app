<h1>Just a new pin</h1>

<% if !@errors.nil? %>
	<div class="error">
		<label><%= pluralize(@errors.count, "error") %> prohibited this pin from being saved:</label>
		<ul>
			<% @errors.full_messages.each do |msg| %>
				<li><%= "#{msg}" %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<%= form_for @pin do |f| %>
	<label for="pin_title">Title:</label>
	<%= f.text_field :title %>

	<label for="pin_url">Website:</label>
	<%= f.text_field :url %>

	<label for="pin_slug">Slug:</label>
	<%= f.text_field :slug %>

	<label for="pin_text">Text:</label>
	<%= f.text_field :text %>

	<label for="pin_category_id">Category:</label>
	<%= f.collection_select(:category_id, Category.all, :id, :name) %>

	<div>
	<%= f.button(options = {class: "btn btn-default"}) %>
 	</div>

<% end %>